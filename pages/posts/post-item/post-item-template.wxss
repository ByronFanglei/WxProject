.post-container{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx 0;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #dedede;
  padding-bottom: 10rpx;
}
.post-author-date{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10rpx 0 20rpx 10rpx;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  /* 垂直居中 */
  /* vertical-align: middle; */

}
.post-date{
  margin-left: 20rpx;
  /* vertical-align: middle; */
  font-size: 26rpx;
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  margin-left: 10px;
  margin-bottom: 10px;
  color: #333;
}
.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}
.post-content{
  font-size: 28rpx;
  color: #666;
  /* 字间距 */
  letter-spacing: 2rpx;
  margin: 0 0 20rpx 20rpx;
}
.post-like{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  margin-left: 20rpx;
}
.post-like-image{
  height: 32rpx;
  width: 32rpx;
  margin-right: 16rpx;
}
.post-like-font{
  margin-right: 40rpx;
}