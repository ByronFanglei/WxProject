.container{
  display: flex;
  flex-direction: column;
}
.head-image{
  width: 100%;
  height: 460rpx;
}
.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  top: 180rpx;
  margin-left: -51rpx;
  left: 50%;
  opacity: .6;
}
.author-date{
  flex-direction: row;
  margin: 20rpx 0 0 30rpx;
}
.avatar{
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}
.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 30rpx;
  color: #333;
  vertical-align: middle
}
.const-text{
  font-size: 24rpx;
  color: #666;
  margin-left: 20rpx;
}
.date{
  font-size: 30rpx;
  margin-left: 10rpx;
  vertical-align: middle;
  color: #333;
}
.title{
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}
.tool{
  margin-top: 20rpx;
}
.circle-img{
    float: right;
    margin-right: 20rpx;
}
.circle-img Image {
  width: 90rpx;
  height: 90rpx;
}
.share-img {
  margin-left: 30rpx;
}
.horizon{
  width: 660rpx;
  height: 1px;
  margin: 0 auto;
  background: #eee;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  z-index: -99;
}
.detail{
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
